{
    "overrides": [
        {
            "files": [".prettierrc", ".babelrc", ".eslintrc", ".stylelintrc"],
            "options": {
                "parser": "json"
            }
        }
    ],
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all",
    "tabWidth": 4,
    "printWidth": 120,
    "useTabs": false,
    "semi": true,
    "quoteProps": "as-needed",
    "bracketSpacing": true
}
